{
    "build": {
        // Path is relative to the devcontainer.json file.
        "dockerfile": "Dockerfile",
        "context": "..",
        "target": "final", // last stage of your Dockerfile
        "args": {
            "MULTISTAGE_BUILDER_VERSION": "2022-12-21",
            "UBUNTU_VERSION": "22.04",
            "TARGETARCH": "amd64",
            "DOCKER_VERSION": "29.0.1",
            "KUBECTL_VERSION": "1.34.2",
            "HELM_VERSION": "4.0.0",
            "TERRAFORM_VERSION": "1.13.5",
            "AZ_CLI_VERSION": "2.79.0",
            "KUBELOGIN_VERSION": "0.1.9",
            "ANSIBLE_VERSION": "",
            "POWERSHELL_VERSION": "7.5.4"
        }
    },
    // Start the container as root (your Dockerfile expects this)
    "remoteUser": "vscode",
    // Where the project will live inside the container
    "workspaceFolder": "/vscode/project",
    // Bind your local workspace into the container
    "mounts": [
        "source=${localWorkspaceFolder}/..,target=/vscode/project,type=bind,consistency=cached"
    ]
}